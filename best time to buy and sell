#include<bits/stdc++.h>
using namespace std;
int two(vector<int> &arr,int n){
	int mini=arr[0];
	int maxprofit=0;
	for(int i=0;i<arr.size();i++){
		int cost=arr[i]-mini;
		maxprofit=max(maxprofit,cost);
		mini=min(mini,arr[i]);
	}
	return maxprofit;
}
int main(){
	int n;
	cin>>n;

	vector <int> arr(n);
	for(int i=0;i<n;i++){
		cin>>arr[i];
	} 
	
	 cout<<two(arr,n);
    }
	

#include<bits/stdc++.h>
using namespace std;
int two(vector<int> &arr,int n){
	int sum=0;
	int max=0;
	for(int i=0;i<arr.size();i++){
		sum+=arr[i];
		if(sum > max){
			max=sum;
		}
		if(sum<0){
			sum=0;
		}
	}
		return max;
	
}
int main(){
	int n;
	cin>>n;

	vector <int> arr(n);
	for(int i=0;i<n;i++){
		cin>>arr[i];
	} 
	
	 cout<<two(arr,n);
    }
	
